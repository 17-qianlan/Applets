.player {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  padding: 10rpx;
  overflow: hidden;
  z-index: 1000;
}
.player .song-information {
  display: block;
  width: 400rpx;
  margin-left: 10rpx;
}
.player .song-information text {
  display: block;
}
.player .song-information text:nth-child(2) {
  margin: 10rpx 0 0 10rpx;
  font-size: 30rpx;
}
.player .next {
  margin-right: 20rpx;
}
.player .play {
  margin-right: 20rpx;
}
.player image {
  width: 100rpx;
  height: 100rpx;
}


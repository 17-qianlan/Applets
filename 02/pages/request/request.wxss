/* pages/request/request.wxss */
.bg{
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 100vh;
    filter: blur(10px);
    z-index: -1;
}
form{
    display: block;
    width: 100%;
    height: 1vw;
}
form .search{
    width: 93%;
    height: 100rpx;
    margin: 120rpx auto 0;
    overflow: hidden;
}
form .search input{
    width: 80%;
    height: 90%;
    padding: 0 10rpx;
    border: 1px solid #000;
    border-right: 0;
}
form .search button:after{
    border: 0;
}
form .search button{
    float: right;
    padding: 0;
    width: 90rpx;
    height: 95rpx;
    margin: 0 31rpx 0 0;
    border-radius: 0;
    background: #ccc;
}
form .search button image{
    width: 100%;
    height: 100%;
}